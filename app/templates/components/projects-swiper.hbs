  pagination=true
  loop=true
  centered=true
  slidesPerView=1
  onChange='swipeContent'
  class='screenshot-swiper'}}

  {{#swiper-slide}}
    <img src="assets/img/SIU-1.png" alt="Image of Shake It Up Android App" class="mobile-img" />
    <img src="assets/img/SIU-2.png" alt="Image of Shake It Up Android App" class="mobile-img"/>
    <img src="assets/img/SIU-3.png" alt="Image of Shake It Up Android App" class="mobile-img"/>
  {{/swiper-slide}}

  {{#swiper-slide}}
    <img src="assets/img/MovieLookup-1.png" alt="Image of Movie Lookup Android App" class="mobile-img" />
    <img src="assets/img/MovieLookup-2.png" alt="Image of Movie Lookup Android App" class="mobile-img"/>
    <img src="assets/img/MovieLookup-3.png" alt="Image of Movie Lookup Android App" class="mobile-img"/>
  {{/swiper-slide}}

  {{#swiper-slide}}
    <img src="assets/img/Drink-1.png" alt="Image of Movie Lookup Android App" class="mobile-img" />
    <img src="assets/img/Drink-2.png" alt="Image of Movie Lookup Android App" class="mobile-img"/>
    <img src="assets/img/Drink-3.png" alt="Image of Movie Lookup Android App" class="mobile-img"/>
  {{/swiper-slide}}

  {{#swiper-slide}}
    <img src="assets/img/YesChef-3.png" alt="Image of YesChef Java web app" class="web-img" />
  {{/swiper-slide}}
  {{#swiper-slide}}<img src="assets/img/MSPC.png" alt="Image of YesChef Java web app" class="web-img" />{{/swiper-slide}}
{{/swiper-container}}

<div class="slider-content">
  <div class="row">
    <div class="col-xs-12">
      <h5 class="text-center">{{slideTitle}}</h5>
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left description">
        <small>{{slideDescription}}</small>
      </div>
    </div>
  </div>
  <div class="btn-container">
    {{#if isGoogle}}
    <a href={{slideLive}}>
      <img src="assets/img/google-play-badge.png" alt="Get it on Google Play" class="google-btn" />
    </a>
    {{/if}}
    {{#if isDemo}}
    <a href="{{slideLive}}" class="btn btn-success">demo</a>
    {{/if}}
    <a href={{slideSource}} class="btn btn-info">source</a>
  </div>
</div>
