{{#swiper-container
  pagination=true
  loop=true
  centered=true
  slidesPerView=1
  grabCursor=true
  onChange='swipeContent'
  class='screenshot-swiper'
}}
  {{#swiper-slide}}
  <img src={{slideImage1}} alt={{slideImage1Alt}} class="mobile-img" />
  <img src={{slideImage2}} alt={{slideImage2Alt}} class="mobile-img"/>
  <img src={{slideImage3}} alt={{slideImage3Alt}} class="mobile-img"/>
  {{/swiper-slide}}
  {{#swiper-slide}}{{slideTitle}}{{/swiper-slide}}
  {{#swiper-slide}}{{slideTitle}}{{/swiper-slide}}
  {{#swiper-slide}}{{slideTitle}}{{/swiper-slide}}
  {{#swiper-slide}}{{slideTitle}}{{/swiper-slide}}
{{/swiper-container}}

<div class="row">
  <div class="col-xs-12">
    <h6 class="text-center">{{slideTitle}}</h6>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
      <small>{{slideDescription}}</small>
    </div>
  </div>
</div>
<div class="btn-container">
  {{#if isGoogle}}
  <a href={{slideLive}}>
    <img src="assets/img/google-play-badge.png" alt="Get it on Google Play" class="google-btn" />
  </a>
  {{/if}}
  {{#if isDemo}}
  <a href="{{slideLive}}" class="btn btn-success">demo</a>
  {{/if}}
  <a href={{slideSource}} class="btn btn-info">source</a>
</div>
